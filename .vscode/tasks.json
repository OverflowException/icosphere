{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "ico build",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"icosphere.cpp",
				"-o",
				"ico"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "cppbuild",
			"label": "uv build",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"uvsphere.cpp",
				"-o",
				"uv"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}